<h1> <%=@letters%></h1>

<form action="/score">
  <label for="word">Type your guess</label>
  <input type="text" id="question" name="word" placeholder="your word">
  <input type="hidden" name="start_time" value="<%= @start_time %>">
  <input type="hidden" name="letters" value="<%= @letters %>">
  <input type="submit" value="Go!">
</form>

